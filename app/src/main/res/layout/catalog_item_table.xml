<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tree_view_item_height"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/text_view_node_arrow_side"
        android:layout_height="@dimen/text_view_node_arrow_side"
        android:layout_gravity="center_vertical"
        android:contentDescription="arrow"
        android:src="@drawable/ic_keyboard_arrow_right_black" />

    <TextView
        android:id="@+id/query_catalog_list_item_text"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/ic_format_list_numbered_black"
        android:drawablePadding="@dimen/tree_view_padding"
        android:gravity="center_vertical"
        android:textSize="@dimen/tree_view_text_size"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>